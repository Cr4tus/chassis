{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",         // Changed from NodeNext
        "moduleResolution": "Bundler", // Changed from NodeNext
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "rootDir": "src"
    },
    "include": ["src"]
}